#include<stdio.h>
void main()
{
      int n;
      printf("\nEnter the number of rows : ");
      scanf("%d",&n);
      for(int i=0;i<=n-1;i++)
      {
            for(int j=0;j<=i;j++)
            {
                  printf(" ");
            }
            int k;
            for(k=1;k<=n-i;k++)
            {
                  printf("%d",k);
            }
            printf("%d",k);
            
            for(int l=k-1;l>=0;l--)
            {
                  
                  printf("%d",l);
            }
            printf("\n");
            
      }
}
